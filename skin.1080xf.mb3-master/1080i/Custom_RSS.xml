<window type="dialog" id="3005">
    <zorder>3</zorder>
    <allowoverlay>no</allowoverlay>
    <visible>!Window.IsVisible(startup) + [Skin.HasSetting(GlobalRSS.Top) | Skin.HasSetting(GlobalRSS.Bottom)]</visible>
    <controls>
        <control type="rss">
            <posx>0</posx>
            <posy>14</posy>
            <height>30</height>
            <width>1920</width>
            <font>Font-Condensed-S28</font>
            <urlset>1</urlset>
            <textcolor>SecondaryT</textcolor>
            <titlecolor>SecondaryT</titlecolor>
            <shadowcolor>22000000</shadowcolor>
            <headlinecolor>SecondaryT</headlinecolor>
            <animation effect="slide" end="0,1030" time="0" condition="Skin.HasSetting(GlobalRSS.Bottom)">Conditional</animation>
            <visible>!Window.IsVisible(fullscreenvideo) + !Window.IsVisible(visualisation) + !Window.IsVisible(screencalibration) + !Window.IsVisible(screensaver) + !Window.IsVisible(slideshow)</visible>
        </control>
    </controls>
</window> 