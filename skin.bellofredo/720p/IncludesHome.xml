					<left>-10</left>
					<top>110</top>
					<width>1500</width>
					<height>720</height>
					<align>center</align>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),movies)">SetFocus(90501)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),tvshows)">SetFocus(90601)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),music)">SetFocus(45)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),tunein)">SetFocus(90801)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),widgetgroup1)">SetFocus(90901)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),widgetgroup2)">SetFocus(90911)</onup>
					<onup condition="StringCompare(Container(20).ListItem.Property(widget),widgetgroup3)">SetFocus(90931)</onup>
