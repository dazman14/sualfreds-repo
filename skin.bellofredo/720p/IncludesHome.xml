						<control type="label">
							<left>0</left>
							<top>200</top>
							<width>400</width>
							<textcolor>55white</textcolor>
							<shadowcolor>55000000</shadowcolor>
							<font>FontSize_65</font>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
						</control>
					</itemlayout>
					<focusedlayout width="500">													
