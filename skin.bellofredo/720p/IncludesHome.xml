								<animation effect="fade" time="0">Hidden</animation>
								<left>-15</left>
								<top>264</top>		
								<width>530</width>
								<height>18</height>
								<textcolor>77white</textcolor>
								<shadowcolor>55000000</shadowcolor>
								<font>FontSize_16</font>
								<align>center</align>			
								<label>$INFO[Control.GetLabel(17)]</label>						
								<label>$INFO[Control.GetLabel(18)]</label>						
								<label>$INFO[Control.GetLabel(19)]</label>
								<scroll>false</scroll>
								<scrollout>false</scrollout>
								<scrollspeed>100</scrollspeed>
								<pauseatend>4000</pauseatend>						
							</control>
							<control type="grouplist">
								<visible>Control.HasFocus(20) + !Container(20).OnNext + !Container(20).OnPrevious</visible>
								<animation effect="slide" time="0" start="0,0" end="0,27" condition="Control.IsVisible(16) + !IsEmpty(Control.GetLabel(17))">Conditional</animation>
								<itemgap>0</itemgap>
								<orientation>horizontal</orientation>
								<width>530</width>
								<height>21</height>
								<left>-15</left>	
								<top>265</top>							
								<align>center</align>
								<animation effect="fade" time="250" delay="50">Visible</animation>
								<animation effect="fade" time="0">Hidden</animation>
								<control type="image" id="201">									
									<width>21</width>
									<height>18</height>
									<texture background="true">buttons/arrow.png</texture>
									<colordiffuse>CCFFFFFF</colordiffuse>
									<visible>IntegerGreaterThan(Container(23).NumItems,0)</visible>
									<animation type="Conditional" condition="Skin.HasSetting(HomeMenuArrowAnimation)" pulse="true">
										<effect type="fade" start="0" end="100" delay="900" time="900"  />
										<effect type="slide" start="0,-2" end="0,4" tween="sine" easing="inout" delay="900" time="900" />
									</animation>
								</control>
								<control type="image" id="202">
									<width>21</width>
									<height>18</height>
									<texture background="true">buttons/arrow_top.png</texture>
									<colordiffuse>CCFFFFFF</colordiffuse>
									<visible>!IsEmpty(Container(20).ListItem.Property(widget))</visible>
									<animation type="Conditional" condition="Skin.HasSetting(HomeMenuArrowAnimation)" pulse="true">
										<effect type="fade" start="0" end="100" delay="900" time="900"  />
										<effect type="slide" start="0,2" end="0,-4" tween="sine" easing="inout" delay="900" time="900" />
									</animation>
								</control>
							</control>
						
					</focusedlayout>
					<content>
						<include>skinshortcuts-mainmenu</include>
					</content>
				</control>
