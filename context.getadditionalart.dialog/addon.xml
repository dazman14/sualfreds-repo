<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.getadditionalart.dialog" name="Download Extra Arts" version="0.1.1" provider-name="sualfred">
  <requires>
    <import addon="xbmc.python" version="2.20.0"/>
  </requires>
  <extension point="kodi.context.item" library="addon.py">
    <item>
      <label>30000</label>
      <visible>StringCompare(ListItem.dbtype,movie) | StringCompare(ListItem.dbtype,tvshow)</visible>
    </item>
  </extension>
  <extension point="kodi.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Download DiscArt and more via context menu</summary>
    <description lang="en">Needs ArtworkDownloader installed and activated. Available for moviesa and tv shows.</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
    <forum></forum>
    <source></source>
  </extension>
</addon>
